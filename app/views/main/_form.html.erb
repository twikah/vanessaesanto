<%= form_for @contact, url: contacts_path, html: {class: "contact-form"} do |f| %>
  <%= render 'main/error_messages', object: f.object %>

  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: 'form-field', required: true %>

  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, class: 'form-field', required: true %>

  <%= f.label :content, class: "form-label" %>
  <%= f.text_area :content, rows:"5", class: 'form-field', required: true %>

  <%= f.submit "Send", class: "form-button" %>
<% end %>
